{
  "name": "moviestand",
  "private": true,
  "version": "0.1.0",
  "description": "Movie collection manager",
  "main": "app/index.js",
  "repository": "https://github.com/jsayol/moviestand",
  "issues": "https://github.com/jsayol/moviestand/issues",
  "license": "GPL-3.0",
  "dependencies": {
    "bower": "^1.3.1",
    "async": "^0.9.0",
    "lowdb": "^0.7.2",
    "moviedb": "^0.2.0"
  },
  "devDependencies": {
    "electron-packager": "^5.0.2",
    "electron-prebuilt": "^0.30.4",
    "rimraf": "latest"
  },
  "config": {
    "dirbuild": "build",
    "dircache": "cache",
    "electron": "0.30.4",
    "name": "Moviestand",
    "ignore": "cache|build|test|util|((.*)\\.?db\\.(.+))|(node_modules/(bower(.*)|rimraf|lodash))"
  },
  "scripts": {
    "postinstall": "npm install util/bower-clean && bower install && bower-clean",
    "postupdate": "bower update && bower-clean",
    "prestart": "npm install --production",
    "start": "electron .",
    "clean": "npm run clean:win && npm run clean:linux && npm run clean:osx",
    "clean:win": "npm run clean:win32 && npm run clean:win64",
    "clean:linux": "npm run clean:linux32 && npm run clean:linux64",
    "clean:osx": "rimraf $npm_package_config_dirbuild/$npm_package_config_name-darwin",
    "clean:win32": "rimraf $npm_package_config_dirbuild/$npm_package_config_name-win32-ia32",
    "clean:win64": "rimraf $npm_package_config_dirbuild/$npm_package_config_name-win32-x64",
    "clean:linux32": "rimraf $npm_package_config_dirbuild/$npm_package_config_name-linux-ia32",
    "clean:linux64": "rimraf $npm_package_config_dirbuild/$npm_package_config_name-linux-x64",
    "build": "npm run build:osx && npm run build:win && npm run build:linux",
    "build:win": "npm run build:win32 && npm run build:win64",
    "build:linux": "npm run build:linux32 && npm run build:linux64",
    "build:osx": "npm run clean:osx && electron-packager ./ $npm_package_config_name --out=$npm_package_config_dirbuild --platform=darwin --arch=x64 --version=$npm_package_config_electron --cache=$npm_package_config_dircache --ignore=\"$npm_package_config_ignore\"",
    "build:win32": "npm run clean:win32 && electron-packager ./ $npm_package_config_name --out=$npm_package_config_dirbuild --platform=win32 --arch=ia32 --version=$npm_package_config_electron --cache=$npm_package_config_dircache --ignore=\"$npm_package_config_ignore\"",
    "build:win64": "npm run clean:win64 && electron-packager ./ $npm_package_config_name --out=$npm_package_config_dirbuild --platform=win32 --arch=x64 --version=$npm_package_config_electron --cache=$npm_package_config_dircache --ignore=\"$npm_package_config_ignore\"",
    "build:linux32": "npm run clean:linux32 && electron-packager ./ $npm_package_config_name --out=$npm_package_config_dirbuild --platform=linux --arch=ia32 --version=$npm_package_config_electron --cache=$npm_package_config_dircache --ignore=\"$npm_package_config_ignore\"",
    "build:linux64": "npm run clean:linux64 && electron-packager ./ $npm_package_config_name --out=$npm_package_config_dirbuild --platform=linux --arch=x64 --version=$npm_package_config_electron --cache=$npm_package_config_dircache --ignore=\"$npm_package_config_ignore\""
  }
}
